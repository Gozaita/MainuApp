<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eus.mainu.mainu.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:src="@mipmap/mainu_logo"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/primerPlato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_gravity="center"
            android:text="@string/primer_Plato"
            android:textSize="30sp"
            android:textStyle="bold" />

            <ListView
                android:id="@+id/listaPrimeros"
                android:layout_marginLeft="100sp"
                android:layout_marginRight="100sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/segundoPlato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="@string/segundo_Plato"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/listaSegundos"
                android:layout_marginLeft="100sp"
                android:layout_marginRight="100sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>


            <TextView
                android:id="@+id/postre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="@string/postre"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/listaPostres"
                android:layout_marginLeft="100sp"
                android:layout_marginRight="100sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>
