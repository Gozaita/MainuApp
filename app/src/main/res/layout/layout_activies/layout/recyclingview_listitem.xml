<?xml version="1.0" encoding="utf-8"?>
<!-- Plantilla para el recycling view de los Bocadillos, se representara en funcion de este layout-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:orientation="horizontal"
    android:layout_marginStart="11dp"
    android:layout_marginEnd="11dp"
    android:id="@+id/bocadillo_layout"
    android:background="?android:attr/selectableItemBackground">


    <TextView
        android:id="@+id/nombreTextView"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/descripcionTextView"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_light"
        android:text="Nombre"
        android:textStyle="bold"
        android:textColor="@color/negro"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/descripcionTextView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombreTextView"
        android:layout_marginTop="5dp"
        android:text="Descripcion"
        android:textSize="11sp"
        android:fontFamily="@font/roboto_light"
        />


    <TextView
        android:id="@+id/precioTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/nombreTextView"
        android:fontFamily="@font/roboto_light"
        android:text="X.XXâ‚¬"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/estrella"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignEnd="@+id/precioTextView"
        android:layout_alignTop="@id/descripcionTextView"
        app:srcCompat="@drawable/ic_star_mainu_24dp" />

    <TextView
        android:id="@+id/puntuacionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/descripcionTextView"
        android:layout_toStartOf="@+id/estrella"
        android:layout_marginRight="3dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/roboto_light"
        android:text="4.5"
        android:textSize="11sp" />




</RelativeLayout>