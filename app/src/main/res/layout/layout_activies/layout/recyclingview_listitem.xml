<?xml version="1.0" encoding="utf-8"?>
<!-- Plantilla para el recycling view de los Bocadillos, se representara en funcion de este layout-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="15dp"
    android:id="@+id/parent_layout">


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="5dp"
        android:src="@mipmap/icon_round"
        android:id="@+id/imageView" />


    <TextView
        android:id="@+id/nombreTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/descripcionTextView"
        android:text="Nombre"
        android:textSize="20sp"
        android:fontFamily="@font/gothambold"
        />

    <TextView
        android:id="@+id/descripcionTextView"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombreTextView"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/imageView"
        android:textAllCaps="true"
        android:text="Descripcion"
        android:textSize="12sp"
        android:fontFamily="@font/gothamlight"
        />


    <TextView
        android:id="@+id/precioTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="14dp"
        android:text="X.XXâ‚¬"
        android:textSize="20sp"
        android:fontFamily="@font/gothamroundedbook"
        />


</RelativeLayout>