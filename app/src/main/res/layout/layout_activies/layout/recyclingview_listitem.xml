<?xml version="1.0" encoding="utf-8"?>
<!-- Plantilla para el recycling view de los Bocadillos, se representara en funcion de este layout-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="15dp"
    android:id="@+id/bocadillo_layout">


    <TextView
        android:id="@+id/nombreTextView"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/descripcionTextView"
        android:text="Nombre"
        android:textAllCaps="true"
        android:textSize="15sp"
        android:fontFamily="@font/gothambold"
        />

    <TextView
        android:id="@+id/descripcionTextView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombreTextView"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"
        android:textAllCaps="true"
        android:text="Descripcion"
        android:textSize="11sp"
        android:fontFamily="@font/gothamlight"/>


    <TextView
        android:id="@+id/precioTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="11dp"
        android:fontFamily="@font/gothambold"
        android:text="X.XXâ‚¬"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/estrella"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/precioTextView"
        android:layout_below="@+id/precioTextView"
        android:layout_marginTop="3dp"
        app:srcCompat="@drawable/ic_star_half_mainu_24dp" />

    <TextView
        android:id="@+id/puntuacionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/estrella"
        android:layout_toStartOf="@+id/estrella"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="6dp"
        android:fontFamily="@font/gothamlight"
        android:text="4.5"
        android:textSize="12sp" />




</RelativeLayout>