<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/busquedaToolBar">

        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/textViewActividad"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/configuracionButton"
            android:text="MainU for U"
            android:textColor="@color/blanco"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/configuracionButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textViewActividad"
            android:layout_marginStart="20dp"
            android:background="@color/colorPrimary"
            app:srcCompat="@drawable/ic_menu_navigation" />


    </RelativeLayout>


</merge>