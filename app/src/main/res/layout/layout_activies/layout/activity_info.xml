<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eus.mainu.mainu.Activity_Info"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Acerca de MainU"
            style="@style/Base.TextAppearance.AppCompat.Headline"
            android:textColor="#000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:text="Desarrolladores:"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:text="• Ismael Estalayo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:text="• Guillermo Carlos Ozaita"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:text="• Andreea Stanciu"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:text="• Adrián Vazquez"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:layout_marginTop="100px"
            android:text="Contacto:"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoLink="email"
            android:layout_marginLeft="30px"
            android:text="• Mail:  dev@mainu.eus "/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoLink="web"
            android:layout_marginLeft="30px"
            android:text="• Codigo:  https://github.com/mainu4u/"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:layout_marginTop="100px"
            android:text="Agradecimientos:"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoLink="web"
            android:layout_marginLeft="30px"
            android:text="• Iconos de:  https://smashicons.com/"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoLink="web"
            android:layout_marginLeft="30px"
            android:text="• Iconos de: https://www.freepik.com/"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher_foreground"
        android:layout_alignParentBottom="true"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/logo"
        android:layout_alignTop="@id/logo">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="MainU"
            android:textColor="#000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hecho por y para estudiantes ❤"/>

        <TextView
            android:id="@+id/versionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version X.X.X"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:text="www.mainu.eus"/>

    </LinearLayout>


</RelativeLayout>
