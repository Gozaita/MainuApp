<merge xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="250dp">

        <TextView
            android:id="@+id/primerPlato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="6dp"
            android:text="@string/primer_Plato"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_light"
            />

        <ListView
            android:id="@+id/listaPrimeros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/primerPlato"/>

        <TextView
            android:id="@+id/segundoPlato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/listaPrimeros"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/colorPrimary"
            android:text="@string/segundo_Plato"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_light"
            />

        <ListView
            android:id="@+id/listaSegundos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/segundoPlato" />

        <TextView
            android:id="@+id/postre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/listaSegundos"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/colorPrimary"
            android:text="@string/postre"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_light"
            />

        <ListView
            android:id="@+id/listaPostres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/postre" />

    </RelativeLayout>

</merge>