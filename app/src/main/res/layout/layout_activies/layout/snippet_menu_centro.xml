<merge xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipeMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/primerPlato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10sp"
            android:text="@string/primer_Plato"
            android:textSize="30sp"
            android:fontFamily="@font/gothambold"
            />

        <ListView
            android:id="@+id/listaPrimeros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/primerPlato"/>

        <TextView
            android:id="@+id/segundoPlato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/listaPrimeros"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10sp"
            android:text="@string/segundo_Plato"
            android:textSize="30sp"
            android:fontFamily="@font/gothambold"
            />

        <ListView
            android:id="@+id/listaSegundos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/segundoPlato" />

        <TextView
            android:id="@+id/postre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/listaSegundos"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10sp"
            android:text="@string/postre"
            android:textSize="30sp"
            android:fontFamily="@font/gothambold"
            />

        <ListView
            android:id="@+id/listaPostres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/postre" />

    </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</merge>