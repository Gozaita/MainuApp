<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/primerPlato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/gothamroundedbold"
            android:text="@string/primer_Plato"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listaPrimeros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/primerPlato"/>

        <TextView
            android:id="@+id/segundoPlato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/listaPrimeros"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/gothamroundedbold"
            android:text="@string/segundo_Plato"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listaSegundos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/segundoPlato" />

        <TextView
            android:id="@+id/postre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/listaSegundos"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/gothamroundedbold"
            android:text="@string/postre"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listaPostres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100sp"
            android:layout_marginRight="100sp"
            android:layout_below="@id/postre" />

    </RelativeLayout>


</merge>